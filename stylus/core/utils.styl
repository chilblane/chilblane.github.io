.sr-only {
    position: absolute;
    overflow: hidden;
    clip: rect(0 0 0 0);
    height: 1px;
    width: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
}

.nowrap {
    white-space: nowrap;
}

.centered {
    text-align: center;
}
.full-width {
    width: 100%;
}

.embed-container {
  position: relative;
  padding: 0;
  height: 0;
  overflow: hidden;
  &--paper { // 8.5 x 11
    padding-bottom: (11 / 8.5) * 100%;
  }
  & iframe {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    width: 100%;
    height: 100%;
  }
}

spacing-types   = 'm' 'margin', 'p' 'padding';
spacing-sizes   = 'z' 0, 'xs' 0.25, 's' 0.5, 'm' 1, 'l' 2;
spacing-dir     = 't' 'top', 'l' 'left', 'r' 'right', 'b' 'bottom';
for type in spacing-types {
    for size in spacing-sizes {
        for dir in spacing-dir {
            .{type[0]}{dir[0]}{size[0]} {
                {type[1]}-{dir[1]}: size[1] * $leading !important;
            }
        }
        .{type[0]}{size[0]} {
            {type[1]}: size[1] * $leading !important;
        }
    }
}
