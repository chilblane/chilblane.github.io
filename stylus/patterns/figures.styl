.figure {
  margin: 2 * $leading 0;
  figcaption {
    font-size: 0.5 * $font-scale * 1rem;
    line-height: $leading;
  }
  &:after {
    content: '';
    display: block;
    height: 1px;
    width: 3em;
    background-color: $color-bg-separator;
  }
}

.spotlight {
  display: block;
  position: relative;
  margin: 0.1 * $leading 0;
  &:after {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-image: linear-gradient(transparent, $color-bg-separator);
  }
  &:hover,
  &:focus {
    &:after {
      background-image: linear-gradient(transparent, $link-color-hover);
    }
  }
  &__caption {
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0.25em 0.75em;
    color: white;
    line-height: $leading;
  }
}
