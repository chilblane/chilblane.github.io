// typography, powered by typebase.css
h1 {
    font-size: 3 * $font-scale * 1rem;
    line-height: 1;
    font-weight: 300;
}
h2 {
    font-size: 2 * $font-scale * 1rem;
    line-height: 2 * $leading;
    margin-top: 2 * $leading;
    font-weight: 300;
}
h3 {
    font-size: 1 * $font-scale * 1rem;
    margin-top:  $leading;
    line-height:  $leading;
    color: $color-bg-fade;
    font-weight: 400;
}
p {
    margin-top: $leading;
    line-height: $leading;
}
ul,
ol {
    margin-top: $leading;
    li {
        line-height: $leading;
    }
}
h1, h2, h3, p, li {
    a {
        border-bottom: 2px solid currentColor;
        font-weight: bold;
    }
}
h3, p, li {
    letter-spacing: 0.05em;
}
