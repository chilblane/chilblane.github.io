$color-bg-panel = mix($color-bg-dark, $color-bg-light, 90%)

.panel {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    min-height: 100vh;
    padding: $leading $leading 2 * $leading;
    &__content {
        width: 100%;
        max-width: 80em;
    }
    h2 {
        margin-bottom: 1.5 * $leading;
        display: inline-block;
        text-transform: lowercase;
        &:after {
            content: '';
            display: block;
            margin-top: 0.5 * $leading;
            width: 100%;
            height: 3px;
            background-color: $color-bg-separator;
        }
    }
    &--45em {
        .panel__content {
            max-width: 45em;
        }
    }
    &--60em {
        .panel__content {
            max-width: 60em;
        }
    }
    main &:nth-of-type(odd) {
        background-color: $color-bg-panel;
        background-image: radial-gradient($color-bg-panel, $color-bg-dark);
        background-size: 150% 150%;
        background-position: center center;
        border-top: 1px solid $color-bg-glass;
        border-bottom: 1px solid black;
    }
}
