$sidebar-width = 33%;

container() {
  max-width: 50em;
  margin-left: auto;
  margin-right: auto;
}
.container {
  container();
}

.page {
  &__inner {
    padding: 0 1.5em 1em;
  }
  +above($nav-breakpoint) {
    position: absolute;
    left: $sidebar-width;
    right: 0;
    top: 0;
    bottom: 0;
  }
}

.sidebar {
  padding: 1.5em;
  background-color: $color-bg-dark;
  background-image: url('../static/daniel2.gif'), linear-gradient($color-bg-dark, $color-bg-separator);
  background-size: auto 300%, cover;
  background-position: center center;
  background-repeat: no-repeat;
  color: $color-bg-light;
  p {
    letter-spacing: 0.05em;
  }
  +above($nav-breakpoint) {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: $sidebar-width;
    overflow-y: auto;
    background-size: cover;
    h1, p {
      text-align: center;
    }
  }
}

.sidebar__container {
  container();
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  +above($nav-breakpoint) {
    flex-direction: column;
  }
}

.sidebar__header {
  padding: 2em 0;
}

.sidebar__nav {
  text-align: right;
  padding-left: 2em;
  li a {
    display: block;
    padding: 0.5em 0;
    border: 0;
    cursor: pointer;
    color: $color-bg-fade;
    &:hover,
    &:focus {
      color: $color-bg-light;
    }
  }
  +above($nav-breakpoint) {
    text-align: center;
    padding: 0;
  }
}
