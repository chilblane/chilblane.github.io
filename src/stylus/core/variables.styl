$base-font-size     = 15
$base-line-height   = 1.5
$leading            = $base-line-height * 1rem
$font-scale         = 1.414

$nav-breakpoint = 50em

$font-system = -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
$ff = 'Work Sans', $font-system;
$fa-font-path = '/assets/fonts'

$color-ice      = #0073ff
$color-fire     = #ffc800
$color-purple   = #ff00f2
$color-bg-light = tint($color-ice, 90%) // #e5f1ff
$color-bg-dark  = shade($color-ice, 90%) // #000b19
$color-bg-glass = fade-out($color-bg-light, 90%)
$color-bg-fade  = desaturate(tint($color-ice, 50%), 50%) // #16212f
$color-bg-separator = desaturate(shade($color-ice, 50%), 70%)

$link-color = lighten(desaturate($color-ice, 10%), 20%)
$link-color-hover = lighten($link-color, 15%)
