$base-font-size     = 15
$base-line-height   = 1.5
$leading            = $base-line-height * 1rem
$font-scale         = 1.414

$font-system = -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
$ff = 'Work Sans', $font-system;
$fa-font-path = '/assets/fonts'

$color-ice  = #0073ff
$color-ice-light = mix($color-ice, white, 10%)
$color-ice-dark = mix($color-ice, black, 10%)
$color-ice-glass = fade-out($color-ice-light, 90%)
$color-ice-fade = desaturate(mix($color-ice, white), 50%)
$color-fire = #ffc800

$link-color = lighten(desaturate($color-ice, 20%), 10%)
$link-color-hover = lighten($link-color, 15%)
