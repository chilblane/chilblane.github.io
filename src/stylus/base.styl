// base
body {
    font-size: 15px;
    line-height: 1.5;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
}

a,
a:hover {
    text-decoration: none;
}
a {
    color: $color-ice;
    &:hover,
    &:focus {
        color: darken($color-ice, 30%);
    }
}

.container {
    padding-left: 2em;
    padding-right: 2em;
    +above($bp-large) {
        padding-left: "calc(50% - %s)" % (($bp-large - 40px)/2);
        padding-right: "calc(50% - %s)" % (($bp-large - 40px)/2);
    }
    +above($bp-xlarge) {
        padding-left: "calc(50% - %s)" % (($bp-xlarge - 40px)/2);
        padding-right: "calc(50% - %s)" % (($bp-xlarge - 40px)/2);
    }
}
