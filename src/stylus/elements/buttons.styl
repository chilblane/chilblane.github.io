.button,
button {
    display: inline-block;
    padding: 0.75em 1em;
    border-radius: 3px;
    font-weight: 700;
    text-align: center;
    transition-property: background-color, color;
    transition-timing-function: ease-out;
    transition-duration: 0.2s;
    border: 2px solid currentColor;
    &--small {
        font-size: 0.5 * $font-scale * 1rem;
    }
    &--link {
        background-color: $link-color;
        color: white;
        border-color: lighten($link-color, 20%);
        &:hover,
        &:focus {
            background-color: $link-color-hover;
            color: white;
        }
    }
    &--primary {
        background-color: darken($color-purple, 30%);
        color: white;
        border-color: lighten($color-purple, 10%);
        &:hover,
        &:focus {
            background-color: darken($color-purple, 20%);
            color: white;
        }

    }
}
