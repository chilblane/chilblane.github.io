.button,
button {
    display: inline-block;
    padding: 0.75em 1em;
    border-radius: 3px;
    font-weight: 400;
    text-align: center;
    transition-property: background-color, box-shadow;
    transition-timing-function: ease-out, ease;
    transition-duration: 0.2s, 0.2s;
    border: 2px solid currentColor;
    &--small {
        font-size: 0.5 * $font-scale * 1rem;
    }
    &--link {
        background-color: $link-color;
        color: white;
        border-color: lighten($link-color, 20%);
        &:hover,
        &:focus {
            background-color: $link-color-hover;
            color: white;
        }
        &:active {
            background-color: darken($link-color, 10%);
            box-shadow: inset 0 0.5em 0.5em fade-out(black, 90%);
        }
    }
    &--primary {
        background-color: darken($color-purple, 30%);
        color: white;
        border-color: lighten($color-purple, 10%);
        &:hover,
        &:focus {
            background-color: darken($color-purple, 20%);
            color: white;
        }
        &:active {
            background-color: darken($color-purple, 40%);
            box-shadow: inset 0 0.5em 0.5em fade-out(black, 90%);
        }
    }
}
