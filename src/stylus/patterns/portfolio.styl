.portfolio {
    &__pane {
        padding-bottom: 2 * $leading;
        margin-top: $leading;
        &:not(:first-of-type) {
            border-top: 3px solid $color-ice-glass;
            padding-top: 2 * $leading;
        }
    }
    h3 {
        text-align: center;
    }
    &__preview {
        display: block;
        max-width: 100%;
        margin-left: auto;
        margin-right: auto;
        height: auto;
        margin-top: $leading;
        border: 1px solid $color-ice-fade;
    }
}
