// measurements for nav
$nav-height = 3 * $leading
$nav-button-size = 'calc(%s - 2px)' % (2.5 * $leading)
$mobile-nav-duration = 0.3s

.nav-header {
    position: fixed;
    justify-content: space-between;
    align-items: center;
    height: $nav-height;
    left: 0;
    right: 0;
    z-index: 10;
    &--mobile {
        display: flex;
    }
    &--desktop {
        display: none;
    }
    &__bg {
        position: absolute;
        top: 97%;
        left: 0;
        right: 100%;
        bottom: 0;
        border-bottom: 3px solid white;
        box-shadow: 0 0 3px white;
        transition-property: right, top, box-shadow, border-color, background-color;
        transition-duration: 0.5s, 0s, 0s, 0s, 0s;
        transition-timing-function: ease-in, linear, ease-out, ease-out, ease-out;
        transition-delay: 0.5s, 1s, 1s, 1s, 1s;
    }
    &__logo {
        position: relative;
        left: -100%;
        display: flex;
        align-items: center;
        font-size: 1 * $font-scale * 1rem;
        line-height: $nav-height;
        height: $nav-height;
        color: white;
        letter-spacing: 0.1em;
        transition-property: opacity, left;
        transition-duration: $mobile-nav-duration, 0s;
        transition-timing-function: ease-out, ease-out;
        transition-delay: 0s, $mobile-nav-duration;
        opacity: 0;
        svg {
            height: 0.5 * $nav-height;
            width: 0.5 * $nav-height;
            margin-top: -0.25em;
            margin-left: 0.5em;
            margin-right: 0.5em;
            path {
                fill: $color-bg-fade;
            }
        }
        .js-nav-open & {
            opacity: 1;
            left: 0;
             //opacity, left
            transition-delay: 0s, 0s;
        }
    }
    +above($nav-breakpoint) {
        &--mobile {
            display: none;
        }
        &--desktop {
            display: flex;
        }
        .nav-header__logo {
             //opacity, left
            transition-duration: 0.5s, 0s;
            transition-delay: 0s, 0.5s;
        }
        &.nav-header--stuck {
            .nav-header__bg {
                top: 0;
                right: 0;
                background-color: fade-out($color-bg-dark, 10%);
                border-color: $color-bg-glass;
                material-shadow();
                transition-duration: 0.5s, 0s, 0.5s, 0.5s, 0.5s;
                transition-delay: 0s, 0.5s, 0.5s, 0.5s, 0.5s;
            }
            .nav-header__logo {
                opacity: 1;
                left: 0;
                 //opacity, left
                transition-duration: 1s, 0s;
                transition-delay: 1s, 0s;
            }
        }
    }
    &__links {
        padding-left: 0;
        margin: 0;
        display: none;
        +above($nav-breakpoint) {
            display: block;
        }
        li {
            display: inline-block;
            text-transform: lowercase;
            letter-spacing: 0.2em;
        }
        a {
            position: relative;
            display: inline-block;
            border: 0;
            font-weight: 400;
            color: white;
            margin-right: 0.5 * $leading;
            &:after {
                content: '';
                display: block;
                position: absolute;
                left: 50%;
                right: 50%;
                margin-top: 3px;
                height: 3px;
                background-color: fade-out($color-bg-fade, 30%);
                transition-duration: 0.2s;
                transition-timing-function: ease-out;
                transition-property: left, right;
            }
            &:hover,
            &:focus {
                &:after {
                    left: 0;
                    right: 0;
                }
            }
        }
    }
    &__menu-button {
        position: absolute;
        right: 0;
        display: inline-block;
        line-height: $nav-button-size;
        height: $nav-button-size;
        width: $nav-button-size;
        margin: 0.25 * $leading;
        border: 2px solid $color-bg-glass;
        border-radius: 50%;
        background-color: darken($link-color, 50%);
        material-shadow();
        text-transform: uppercase;
        text-align: center;
        transition-property: transform, background-color;
        transition-duration: $mobile-nav-duration, 0.4s;
        transition-timing-function: ease-out, ease-out;
        cursor: pointer;
        +above($nav-breakpoint) {
            display: none;
        }
        &:hover,
        &:focus {
            background-color: darken($link-color-hover, 30%);
        }
        &:before,
        &:after {
            content: '';
            position: absolute;
            display: block;
            left: 50%;
            background-color: white;
            width: 0.7em;
            margin-left: -0.3em;
            border-radius: 2px;
            opacity: 0;
            transition-property: opacity, top, bottom;
            transition-duration: $mobile-nav-duration;
            transition-timing-function: ease-out;
        }
        &:before {
            top: 50%;
            height: 1em;
        }
        &:after {
            bottom: 50%;
            height: 0.75em;
        }
        .js-nav-open & {
            transform: rotate(45deg);
            &:before,
            &:after {
                opacity: 0.1;
            }
            &:before {
                top: 10%;
            }
            &:after {
                bottom: 10%;
            }
        }
    }
}

.mobile-nav {
    position: fixed;
    top: 0;
    left: 100%;
    width: 150%;
    bottom: 0;
    padding-top: $nav-height;
    background: linear-gradient(to right, transparent, fade-out(black, 10%));
    transition: left $mobile-nav-duration ease-out;
    +above($nav-breakpoint) {
        display: none;
    }
    ul {
        position: relative;
        margin-top: 0;
        padding-left: 0;
    }
    li {
        position: relative;
        display: block;
        left: 100%;
        text-align: right;
        font-size: 1 * $font-scale * 1rem;
        text-transform: lowercase;
        letter-spacing: 0.2em;
        margin-top:  $leading;
        text-shadow: 0 0 2px black;
        transition: left $mobile-nav-duration ease-in;
        a {
            position: relative;
            display: inline-block;
            border: 0;
            font-weight: 400;
            color: white;
            margin-right: 0.5 * $leading;
            &:after {
                content: '';
                display: block;
                position: absolute;
                left: 100%;
                right: 0;
                margin-top: 3px;
                height: 3px;
                background-color: fade-out($color-bg-fade, 30%);
                transition: left 0.4s ease-out;
            }
            &:hover,
            &:focus {
                &:after {
                    left: 0;
                }
            }
        }
    }
    .js-nav-open & {
        left: -50%;
        transition-timing-function: ease-out;
        transition-duration: 0.6s;
        li {
            left: 0;
            transition-timing-function: ease-out;
            transition-duration: 0.7s;
        }
        li:nth-of-type(2) {
            transition-delay: 0.1s;
        }
        li:nth-of-type(3) {
            transition-delay: 0.25s;
        }
        li:nth-of-type(4) {
            transition-delay: 0.4s;
        }
        li:nth-of-type(5) {
            transition-delay: 0.55s;
        }
    }
}

.js-nav-open {
    overflow: hidden;
}
