.panel {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    min-height: 100vh;
    padding: $leading $leading 2 * $leading;
    &:nth-of-type(even) {
        background-color: $color-ice-glass;
    }
    &__content {
        width: 100%;
        max-width: 80em;
    }
    h2 {
        margin-bottom: 1.5 * $leading;
        display: inline-block;
        &:after {
            content: '';
            display: block;
            margin-top: 0.5 * $leading;
            width: 100%;
            height: 3px;
            background-color: fade-out($color-ice-light, 70%);
        }
    }
    &--45em {
        .panel__content {
            max-width: 45em;
        }
    }
    &--60em {
        .panel__content {
            max-width: 60em;
        }
    }
}
