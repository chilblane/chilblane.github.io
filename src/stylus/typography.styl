// typography
h1
    font-size 1.5em ** 3
    line-height 1.25
h2
    font-size 1.5em ** 1
    line-height 1.25
    text-transform uppercase
    opacity 0.6
h3
    margin-bottom 1em
    &:not(:first-child)
        margin-top 1em

p
    margin-bottom 0.5em

h1, h2, h3, p, li
    a
        border-bottom 2px solid currentColor
    em
        color darken($color-fire, 40%)
