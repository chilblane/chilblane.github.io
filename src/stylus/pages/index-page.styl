$tile-size-p = 20vw
$tile-size-l = 15vh

html.index,
html.index body {
    height: 100%;
}

.index-content {
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: $color-ice-light;
    background-image: radial-gradient($color-ice-light 0%, $color-ice-shadow 200%);
    p {
        margin-top: 2em;
        padding: 0.5em 1em;
        border-radius: 3px;
        color: fade-out($color-ice-shadow, 10%);
        background-color: fade-out($color-ice-shadow, 80%);
        box-shadow: inset 0 1px 3px fade-out(black, 80%);
        text-shadow: 0 1px 1px fade-out($color-ice-light, 10%);
        font-weight: 400;
    }
}
.index-name {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-around;
    align-content: space-around;
    text-transform: uppercase;
    line-height: 1;
    font-family: $font-work-sans;
    &__tile {
        display: flex;
        align-items: center;
        justify-content: center;
        color: fade-out($color-ice-light, 5%);
        background-image: radial-gradient(transparent, fade-out($color-ice-shadow, 70%));
        border-radius: 5%;
        border: 0;
        box-shadow: inset 0 1px 3px fade-out(black, 80%);
        text-shadow: 0 1px 3px fade-out(black, 80%);
        cursor: default;
        a& {
            cursor: pointer;
            color: fade-out($color-fire-light, 5%);
            background-color: fade-out($color-ice-shadow, 60%);
            transition-property: color, text-shadow;
            transition-timing-function: ease-out;
            transition-duration: 1s, 1s;
            transition-delay: 0.5s, 0;
            &:hover,
            &:focus {
                color: white;
                transition-duration: 1s, 1.5s;
                transition-delay: 0, 0;
                text-shadow: 0 0 0.1em white, 0 0 0.2em $color-fire, 0 0 1em $color-fire, 0 0 3em $color-fire;
            }
        }
    }
}
+portrait() {
    .index-name {
        width: $tile-size-p * 3.6;
        height: $tile-size-p * 4.8;
        &__tile {
            height: $tile-size-p;
            min-width: $tile-size-p;
            font-size: $tile-size-p;
        }
    }
}
+landscape() {
    .index-name {
        max-width: $tile-size-l * 6.7;
        height: $tile-size-l * 2.3;
        &__tile {
            height: $tile-size-l;
            min-width: $tile-size-l;
            font-size: $tile-size-l;
        }
    }
}

.ice-sheet {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-image: url('/assets/pattern-ice.svg');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    opacity: 0.5;
    pointer-events: none;
}
