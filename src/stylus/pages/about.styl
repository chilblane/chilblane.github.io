.page {
    background-color: darken($color-ice, 80%);
    position: relative;
    &:before {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-image: url('/assets/pattern-ice.svg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
        opacity: 0.4;
    }
    .hero {
        position: relative;
        color: white;
        text-align: center;
        padding: 0 $leading;
        max-height: 500px;
        &__image {
            max-width: 30em;
            margin-left: auto;
            margin-right: auto;
        }
        &__copy {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding-bottom: $leading;
        }
        h1 {
            text-shadow: 0 0 20px black;
        }
        p {
            font-size: $font-scale * 1rem;
            color: $color-ice-light;
            text-shadow: 0 0 10px black;
            strong {
                color: white;
            }
            span {
                display: inline-block;
                margin: 0 1em;
            }
        }
    }
    main {
        position: relative;
    }
}

main section {
    padding: 1px $leading $leading * 2;
    margin-bottom: $leading;
    &.opaque {
        background-color: white;
        box-shadow: 0 2px 2px fade-out(black, 50%);
    }
    &.transparent {
        color: white;
        h2 {
            color: inherit;
            text-shadow: 0 2px 2px fade-out(black, 50%);
        }
    }
}


.skills,
.tools {
    display: flex;
    justify-content: space-between;
    padding-left: 0;
}
.skills {
    flex-wrap: wrap;
}
.skills li {
    display: block;
    width: 100%;
    margin: $leading * 0.5 0;
    icebox();
    +above(440px) {
        width: 48%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    +above(640px) {
        width: 32%;
    }
}
.tools {
    align-items: center;
    max-width: 20em;
}
.tools li {
    display: block;
    max-width: 3em;
    &:not(:first-child) {
        margin-left: 1em;
    }
}

.portfolio {
    + .portfolio {
        margin-top: $leading;
        border-top: 2px solid $color-ice-light;
    }
    &__preview {
        display: block;
        max-width: 450px;
        border: 2px solid $link-color;
        padding: 1px;
        margin-top: $leading;
        border-radius: 3px;
        &:hover,
        &:focus {
            border-color: $link-color-hover;
        }
    }
}

.contact__text {
    display: block;
    margin-top: 0.5 * $leading;
}

footer p {
    color: white;
    text-align: center;
    font-size: ($font-scale / 3) * 1rem;
    margin-top: 0;
    padding-bottom: $leading;
}
